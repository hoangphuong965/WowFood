@model WowFood.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}

<h2>Đăng ký</h2>
<div class="row">
    <div class="col-sm-12">
        <form action="/account/register" method="post">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group">
                    <label for="txtName">UserName</label>
                    @Html.TextBoxFor(temp => temp.UserName, null, new { @class = "form-control", placeholder = "Enter username", autofocus= "autofocus" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(temp => temp.UserName)
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="txtEmail">Email</label>
                    @Html.TextBoxFor(temp => temp.Email, null, new { @class = "form-control", placeholder = "Email" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(temp => temp.Email)
                        @Html.ValidationMessage("CheckEmail")
                    </div>
                </div>

                <div class="form-group">
                    <label for="txtMobile">Mobile</label>
                    @Html.TextBoxFor(temp => temp.Mobile, null, new { @class = "form-control", placeholder = "Enter Mobile" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(temp => temp.Mobile)
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="txtPassword">Password</label>
                    @Html.TextBoxFor(temp => temp.Password, null, new { @class = "form-control", placeholder = "Enter Password", type="password" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(temp => temp.Password)
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Xác nhận</button>
        </form>
    </div>
</div>

